<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_margin="@dimen/size_10dp"
            android:src="@drawable/ic_head_3" />

        <ImageView
            android:id="@+id/item_into"
            android:layout_width="@dimen/size_10dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/size_10dp"
            android:src="@drawable/ic_into" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:layout_margin="@dimen/size_10dp"
            android:layout_toEndOf="@id/item_img"
            android:gravity="start|center"
            android:maxLines="1"
            android:text="@string/demo_title"
            android:textColor="@color/black"
            android:textSize="@dimen/size_15sp" />

        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_10dp"
            android:layout_below="@id/item_img"
            android:background="@color/gray" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>